doctype html
html
    head
        title Add Movie
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous")

    body.p-3
        h1 New Movie
        form(action='/addmovie' method='POST')
            div.form-group
                input(type='text', name='title' placeholder='Title').form-control
            div.form-group
                input(type='text', name='director' placeholder='Director').form-control
            div.form-group
                input(type='number', name='year' placeholder='Year').form-control
            div.form-group
                input(type='submit', value='Add').btn.btn-primary